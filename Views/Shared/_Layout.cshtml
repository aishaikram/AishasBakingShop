<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <link href="~/Content/site.css" rel="stylesheet" />

</head>
<body>
    <!--https://www.w3schools.com/bootstrap/bootstrap_navbar.asp -->

        <nav>
            <ul class="nav navbar-inverse">
                <li class="navbar-brand "><span class="fas fa-apple">Aisha's Bakery</span> </li>
                <li class="nav-item"><a class=" nav-link active" asp-controller="Home" asp-action="Index">Week Speciality</a></li>
                <li class="nav-item"><a class=" nav-link active" asp-controller="Pie" asp-action="List">Our Cakes and Pies</a></li>
                @await Component.InvokeAsync("ShoppingCartSummary") 

            </ul>
        </nav>
    

        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <img class="img-responsive" alt="Aisha's Baking Shop'" src="~/Images/cakeshoplogo.png" />
                </p>
            </div>

            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
   
</body>
</html>
