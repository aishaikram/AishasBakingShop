<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <!--<script src="~/lib/font-awesome/js/all.js" data-auto-replace-svg="nest"></script> -->
    <!--referring font-awesome packages from cdn-->
    <script src="https://kit.fontawesome.com/1597dd8424.js" crossorigin="anonymous"></script>

    <link href="~/Content/site.css" rel="stylesheet" />

</head>
<body>
    <!--https://www.w3schools.com/bootstrap/bootstrap_navbar.asp -->

        <nav>
            <ul class="nav navbar-inverse">
                <span style="font-size: 1.5em; color:hotpink;margin-left:1em;"><i class="fas fa-birthday-cake"></i></span><li class="navbar-brand" style="margin-left:0.5em;">Aisha's Bakery</li>
                <li class="nav-item"><a class=" nav-link active" asp-controller="Home" asp-action="Index">Week Speciality</a></li>
                <li class="nav-item"><a class=" nav-link active" asp-controller="Pie" asp-action="List">Our Cakes and Pies</a></li>
                @await Component.InvokeAsync("ShoppingCartSummary") 

            </ul>
        </nav>
    

        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <img class="img-responsive" alt="Aisha's Baking Shop'" src="~/Images/cakeshoplogo.png" />
                </p>
            </div>

            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
   
</body>
</html>
